@model IEnumerable<Linhkiendientu_aspnetmvc.Areas.Admin.ViewModel.ProductDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>Danh sách sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <a asp-action="Create" asp-controller="Products" asp-area="Admin" class="btn bg-green float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    Thêm sản phẩm
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-end">
                                    <form asp-action="Index" asp-controller="Products" asp-area="Admin" method="get">
                                        <label class="col-form-label"></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <button type="button" class="btn bg-blue btn-search">
                                                    <span class="fas fa-search" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                            <input type="text" name="Keyword" class="form-control txt-search" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Quantity)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Image)
                                        </th>
                                        <th style="width: 150px">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                            <tr>
                                                <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                @Html.DisplayFor(modelItem => item.Quantity)
                                                </td>
                                                <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                                </td>
                                                <td>
                                                    <img src="@Html.DisplayFor(modelItem => item.Image)" alt="">
                                                </td>
                                                <td>
                                                        <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Products" asp-area="Admin" class="btn btn-sm bg-warning" >
                                                            <i class="fas fa-eye" ></i>
                                                        </a>
                                                            <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Products" asp-area="Admin" onclick="return confirm('Bạn có chắc xóa dữ liệu này?')" class="btn btn-sm bg-danger" >
                                                            <i class="fas fa-pencil-alt" ></i>
                                                        </a>
                                                </td>
                                            </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
